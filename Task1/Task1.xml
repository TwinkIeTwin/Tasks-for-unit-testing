        <member name="M:Task1.StringHelper.GetVowelCount(System.String)">
            <summary>
            returns count of vowels from input string.
            </summary>
            <param name="str">input string.</param>
            <returns>count of Vowels. </returns>
            <example>
            <code>
            string s = "aaabb";
            int c = StringHelper.GetVowelCount(s);
            if (c == s.Length)
            {
                Console.WriteLine("whole the string cosist from vowels!");
            }
            </code>
            </example>
            <exception cref="T:System.ArgumentNullException">Thrown when str parameter is null.
            </exception>
            /// <exception cref="T:System.ArgumentException">Thrown when str is empty.
            </exception>
